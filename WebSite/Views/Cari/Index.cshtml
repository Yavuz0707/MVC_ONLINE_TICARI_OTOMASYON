@using MVC_ONLINE_TICARI_OTOMASYON.Models.Siniflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}




<table class="table table-striped">
    <!--Burası Ana Başlıklar-->
    <tr>
        <th>Cari ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>

    <!--Buradan da db den sıraya göre veri çekilir.-->
    @foreach(var x in Model)
            {
                <tr>
                    <td>@x.Cariid</td>
                    <td>@x.CariAd</td>
                    <td>@x.CariSoyad</td>
                    <td>@x.CariSehir</td>
                    <td>@x.CariMail</td>
                    <td><a href="/Cari/CariSil/@x.Cariid" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Cari/CariGetir/@x.Cariid" class="btn btn-warning">Güncelle</a></td>
                    <td><a href="/Cari/MusteriSatis/@x.Cariid" class="btn btn-default" style="background-color:lightcoral">Satın Alma Geçmişi</a></td>
                </tr>
            }
</table>

<!--Cari Ekle sayfasını buradaki butona yönlerdirdik.-->
<a href="/Cari/CariEkle" class="btn btn-info">Yeni Müşteri Ekle</a>

