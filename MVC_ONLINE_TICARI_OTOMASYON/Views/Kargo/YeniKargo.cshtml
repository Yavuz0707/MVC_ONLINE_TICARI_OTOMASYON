<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Yeni Kargo Ekle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h3><i class="fas fa-box"></i> Yeni Kargo Ekle</h3>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("YeniKargo", "Kargo", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="mb-3">
                                <label class="form-label"><i class="fas fa-barcode"></i> Takip Kodu</label>
                                <input type="text" name="TakipKodu" value="@ViewBag.takipkod" class="form-control" readonly />
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label"><i class="fas fa-user"></i> Müşteri Adı</label>
                                <select id="musteriSelect" class="form-control" required>
                                    <option value="">-- Müşteri Seçiniz --</option>
                                    @foreach (var item in ViewBag.Musteriler)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </div>
                            
                            <div class="mb-3" id="satisDiv" style="display:none;">
                                <label class="form-label"><i class="fas fa-shopping-cart"></i> Satın Alınan Ürün</label>
                                <select name="SatisId" id="satisSelect" class="form-control" required>
                                    <option value="">-- Önce müşteri seçin --</option>
                                </select>
                                <small class="text-muted">Sadece kargoya verilmemiş satışlar gösteriliyor</small>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label"><i class="fas fa-info-circle"></i> Durum</label>
                                <select name="Durum" class="form-control" required>
                                    <option value="">-- Durum Seçiniz --</option>
                                    <option value="Hazırlanıyor" selected>Hazırlanıyor</option>
                                    <option value="Kargoya Verildi">Kargoya Verildi</option>
                                    <option value="Yolda">Yolda</option>
                                    <option value="Dağıtım Merkezinde">Dağıtım Merkezinde</option>
                                    <option value="Teslim Edildi">Teslim Edildi</option>
                                </select>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label"><i class="fas fa-user-tie"></i> Personel</label>
                                <input type="text" name="Personel" class="form-control" placeholder="Personel adı giriniz" required />
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label"><i class="fas fa-comment"></i> Açıklama</label>
                                <textarea name="Aciklama" class="form-control" rows="4" placeholder="Kargo detayları..."></textarea>
                            </div>
                            
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success" id="kaydetBtn" disabled>
                                    <i class="fas fa-save"></i> Kargo Oluştur
                                </button>
                                <a href="/Kargo" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Geri Dön
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        $(document).ready(function() {
            // Müşteri seçildiğinde satışları getir
            $('#musteriSelect').change(function() {
                var musteriId = $(this).val();
                
                if(musteriId) {
                    // Satış listesini temizle ve yükleniyor mesajı göster
                    $('#satisSelect').html('<option value="">Yükleniyor...</option>');
                    $('#satisDiv').show();
                    $('#kaydetBtn').prop('disabled', true);
                    
                    // Ajax ile satışları getir
                    $.ajax({
                        url: '/Kargo/GetMusteriSatislari',
                        type: 'GET',
                        data: { musteriId: musteriId },
                        success: function(data) {
                            $('#satisSelect').html('<option value="">-- Satış Seçiniz --</option>');
                            
                            if(data.length > 0) {
                                $.each(data, function(i, satis) {
                                    var tarih = new Date(satis.tarih).toLocaleDateString('tr-TR');
                                    var text = satis.urunAd + ' (' + satis.adet + ' adet) - ' + tarih + ' - ' + satis.tutar.toFixed(2) + ' TL';
                                    $('#satisSelect').append('<option value="' + satis.satisId + '">' + text + '</option>');
                                });
                            } else {
                                $('#satisSelect').html('<option value="">Bu müşterinin kargoya verilmemiş satışı yok</option>');
                            }
                        },
                        error: function() {
                            alert('Satışlar yüklenirken hata oluştu!');
                            $('#satisSelect').html('<option value="">Hata oluştu</option>');
                        }
                    });
                } else {
                    $('#satisDiv').hide();
                    $('#satisSelect').html('<option value="">-- Önce müşteri seçin --</option>');
                    $('#kaydetBtn').prop('disabled', true);
                }
            });
            
            // Satış seçildiğinde kaydet butonunu aktif et
            $('#satisSelect').change(function() {
                if($(this).val()) {
                    $('#kaydetBtn').prop('disabled', false);
                } else {
                    $('#kaydetBtn').prop('disabled', true);
                }
            });
        });
    </script>
</body>
</html>

