@using MVC_ONLINE_TICARI_OTOMASYON.Models.Siniflar;
@model List<KargoDetay>
@{
    ViewBag.Title = "Kargo Yönetimi";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="fas fa-shipping-fast"></i> Kargo Yönetimi</h2>
        </div>
        <div class="col-md-6 text-end">
            <a href="@Url.Action("YeniKargo", "Kargo")" class="btn btn-success btn-lg">
                <i class="fas fa-plus"></i> Yeni Kargo Ekle
            </a>
        </div>
    </div>

    @if (TempData["Mesaj"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Mesaj"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Hata"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Hata"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-list"></i> Tüm Kargolar</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
            {
                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="input-group">
                            @Html.TextBox("p", null, new { @class = "form-control", placeholder = "Takip Kodu ile Ara..." })
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-search"></i> Ara
                            </button>
                        </div>
                    </div>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th><i class="fas fa-hashtag"></i> ID</th>
                            <th><i class="fas fa-user-tie"></i> Personel</th>
                            <th><i class="fas fa-user"></i> Alıcı</th>
                            <th><i class="fas fa-barcode"></i> Takip Kodu</th>
                            <th><i class="far fa-calendar"></i> Tarih</th>
                            <th><i class="fas fa-info-circle"></i> Açıklama</th>
                            <th><i class="fas fa-cogs"></i> İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var k in Model)
                            {
                                <tr>
                                    <td>@k.KargoDetayid</td>
                                    <td>@k.Personel</td>
                                    <td>@k.Alici</td>
                                    <td>
                                        <span class="badge bg-info">@k.TakipKodu</span>
                                    </td>
                                    <td>
                                        @if (k.Tarih.HasValue)
                                        {
                                            @k.Tarih.Value.ToString("dd/MM/yyyy HH:mm")
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(k.Aciklama))
                                        {
                                            if (k.Aciklama.Length > 50)
                                            {
                                                @(k.Aciklama.Substring(0, 50) + "...")
                                            }
                                            else
                                            {
                                                @k.Aciklama
                                            }
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("KargoDetay", "Kargo", new { id = k.KargoDetayid })" 
                                               class="btn btn-sm btn-info" 
                                               title="Detaylar">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("KargoGuncelle", "Kargo", new { id = k.KargoDetayid })" 
                                               class="btn btn-sm btn-warning" 
                                               title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center">
                                    <div class="alert alert-info mb-0">
                                        <i class="fas fa-info-circle"></i> Henüz kargo kaydı bulunmamaktadır.
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
