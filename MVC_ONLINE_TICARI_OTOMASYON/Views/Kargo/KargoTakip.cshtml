@{
    ViewBag.Title = "Kargo Takip";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Kargo Takip</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .tracking-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            max-width: 600px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="tracking-card p-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-shipping-fast fa-4x text-primary mb-3"></i>
                        <h2 class="fw-bold">Kargo Takip Sistemi</h2>
                        <p class="text-muted">Kargonuzun nerede olduğunu öğrenin</p>
                    </div>

                    @if (ViewBag.Hata != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i> @ViewBag.Hata
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @using (Html.BeginForm("KargoTakip", "Kargo", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                    {
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-4">
                            <label for="takipKodu" class="form-label fw-bold">
                                <i class="fas fa-barcode"></i> Takip Kodu
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                <input type="text" 
                                       class="form-control form-control-lg" 
                                       id="takipKodu" 
                                       name="takipKodu" 
                                       placeholder="Örn: 123ABC45XY67ZZZ" 
                                       required 
                                       maxlength="20"
                                       style="font-size: 1.2rem; letter-spacing: 1px;">
                            </div>
                            <small class="form-text text-muted mt-2 d-block">
                                <i class="fas fa-info-circle"></i> Kargo takip kodunuzu büyük-küçük harf duyarlı olmadan girebilirsiniz
                            </small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-search"></i> Kargoyu Sorgula
                            </button>
                            <a href="@Url.Action("Index", "Login")" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Ana Sayfaya Dön
                            </a>
                        </div>
                    }

                    <div class="mt-4 p-3 bg-light rounded">
                        <h6 class="fw-bold mb-2"><i class="fas fa-question-circle"></i> Nasıl Kullanılır?</h6>
                        <ul class="small mb-0">
                            <li>Takip kodunuzu yukarıdaki alana girin</li>
                            <li>"Kargoyu Sorgula" butonuna tıklayın</li>
                            <li>Kargonuzun detaylı bilgilerini görün</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


