@using MVC_ONLINE_TICARI_OTOMASYON.Models.Siniflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Index</h2>
<table class="table table-bordered " style="margin-top:20px; margin-left:20px; margin-right:20px;">

    <tr>
       
        <th>Seri-Sıra NO</th>
        
        
        <th>Tarih</th>
        <th>Saat</th>    
       
        <th>Toplam</th>
        <th>Fatura Güncelle</th>
        <th>Fatura Detay</th>
        
        <th>Yeni Kalem</th>
        
    </tr>

    @foreach (var k in Model)
    {<!--Veri Listeleme İçin Kullanılr.-->

<tr>
    <!--Verileri Getirmek için -->

    
   
   <td>@k.FaturaSeriNo @k.FaturaSiraNo</td>
    <td>@k.Tarih</td>
    <td>@k.Saat</td>
  
    <td>@k.Toplam ₺</td>


    <td><a href="/Faturalar/FaturaGetir/@k.Faturaid" class="btn btn-success" style="background-color : lightgreen">Güncelle</a></td>
    <td><a href="/Faturalar/FaturaDetay/@k.Faturaid" class="btn btn-success" style="background-color : darkmagenta">Detaylar</a></td>
  
    <td><a href="/Faturalar/FaturaDetay/@k.Faturaid" class="btn btn-success" style="background-color : darkmagenta">Kalem</a></td>

</tr>
    }
</table>

<a href="/Faturalar/FaturaEkle" class="btn btn-info">Yeni Fatura Girişi</a>
<br />
<br />
<button type="button" class="btn btn-warning" style="background-color:darkred; color:white" data-toggle="modal" data-target="#Modal1" >Popup Penceresi</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Popup Diyalog Ekranı</h2>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach(var x in Model)
            {
                        <tr>
                            <td>@x.FaturaSeriNo</td>
                            <td>@x.FaturaSiraNo</td>
                            <td>@x.Toplam</td>
                        </tr>
            }
                </table>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>