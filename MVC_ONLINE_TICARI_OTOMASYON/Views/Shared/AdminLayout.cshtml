    <script src="~/Web/dist/js/scripts.js"></script>
    
    <script>
        $(document).ready(function() {
            var menuItems = [
                { label: "Kategoriler", url: "/Kategori/Index" },
                { label: "Ürünler", url: "/Urun/Index" },
                { label: "Departmanlar", url: "/Departman/Index" },
                { label: "Cariler", url: "/Cari/Index" },
                { label: "Müşteriler", url: "/Cari/Index" },
                { label: "Personeller", url: "/Personsel/Index" },
                { label: "Grafikler", url: "/Grafik/Index" },
                { label: "Satışlar", url: "/Satıs/Index" },
                { label: "Faturalar", url: "/Faturalar/Index" },
                { label: "Giderler", url: "/Gider/Index" },
                { label: "Kargo", url: "/Kargo/Index" },
                { label: "Mesajlar", url: "/Mesaj/Index" },
                { label: "Yeni Kargo Ekle", url: "/Kargo/YeniKargo" },
                { label: "Yeni Ürün Ekle", url: "/Urun/YeniUrun" },
                { label: "Yeni Kategori Ekle", url: "/Kategori/KategoriEkle" },
                { label: "Yapılacaklar", url: "/Yapilacak/Index" }
            ];
            
            var selectedIndex = -1;
            
            $("#menuSearch").on("input", function() {
                var term = $(this).val().toLowerCase();
                var results = $("#searchResults");
                
                if(term.length < 1) {
                    results.hide();
                    return;
                }
                
                var filtered = menuItems.filter(function(item) {
                    return item.label.toLowerCase().indexOf(term) !== -1;
                });
                
                if(filtered.length > 0) {
                    var html = "";
                    filtered.forEach(function(item, index) {
                        html += '<div class="search-item" data-url="' + item.url + '" style="padding: 10px; cursor: pointer; border-bottom: 1px solid #eee;">' + 
                                '<i class="fas fa-arrow-right" style="margin-right: 8px;"></i>' + item.label + '</div>';
                    });
                    results.html(html).show();
                } else {
                    results.html('<div style="padding: 10px; color: #999;">Sonuç bulunamadı</div>').show();
                }
            });
            
            $(document).on("click", ".search-item", function() {
                window.location.href = $(this).data("url");
            });
            
            $(document).on("mouseenter", ".search-item", function() {
                $(this).css("background-color", "#007bff").css("color", "white");
            }).on("mouseleave", ".search-item", function() {
                $(this).css("background-color", "").css("color", "");
            });
            
            $(document).click(function(e) {
                if(!$(e.target).closest("#searchForm").length) {
                    $("#searchResults").hide();
                }
            });
            
            $("#searchForm").submit(function(e) {
                e.preventDefault();
                var firstItem = $("#searchResults .search-item").first();
                if(firstItem.length) {
                    window.location.href = firstItem.data("url");
                }
            });
        });
    </script>
</body>
