@using MVC_ONLINE_TICARI_OTOMASYON.Models.Siniflar
@model List<Mesajlar>

<!--ViewComponent: Cari Mesajları-->

<div class="card">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-envelope mr-1"></i>
            Son Mesajlar
        </h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <ul class="list-group list-group-flush">
                @foreach (var mesaj in Model)
                {
                    <li class="list-group-item">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <strong>@mesaj.Gonderici</strong>
                                <p class="mb-1">@mesaj.Konu</p>
                                <small class="text-muted">@mesaj.Tarih.ToString("dd.MM.yyyy")</small>
                            </div>
                            <span class="badge bg-primary rounded-pill">Yeni</span>
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted text-center py-3">
                <i class="fas fa-inbox fa-2x mb-2"></i><br />
                Henüz mesajınız bulunmamaktadır.
            </p>
        }
    </div>
    <!-- /.card-body -->
    <div class="card-footer text-center">
        <a href="@Url.Action("GelenMesajlar", "CariPanel")" class="btn btn-sm btn-primary">
            <i class="fas fa-eye"></i> Tüm Mesajları Görüntüle
        </a>
    </div>
</div>
