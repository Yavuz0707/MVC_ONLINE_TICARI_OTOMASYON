
@{
    ViewBag.Title = "Index5";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Ürün Stok Grafiği</title>

    <!-- sadece loader.js kalsın -->
    <script src="https://www.gstatic.com/charts/loader.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

    <script>
        // önce chart kütüphanesini yükle
        google.charts.load('current', { packages: ['corechart'] });
        google.charts.setOnLoadCallback(loadData);

        // kütüphane yüklendikten sonra veriyi çek
        function loadData() {
            $.ajax({
                type: "GET",
                dataType: "json",
                url: '@Url.Action("VisualizeUrunResult2", "Grafik")',
                success: function (result) {
                    drawChart(result);
                },
                error: function (xhr, status, error) {
                    console.log("Ajax Hatası:", error);
                }
            });
        }

        // grafiği çiz
        function drawChart(result) {
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'Ürün');
            data.addColumn('number', 'Stok');

            var dataArray = [];
            $.each(result, function (i, obj) {
                dataArray.push([obj.urn, obj.stk]);
            });
            data.addRows(dataArray);

            var options = {
                title: "Ürün Stok Durumu",
                width: 1000,
                height: 400,
                bar: { groupWidth: "40%" }
            };

            var chart = new google.visualization.LineChart(
                document.getElementById('Linechart_div')
            );
            chart.draw(data, options);
        }
    </script>
</head>
<body>
    <div id="Linechart_div"></div>
</body>
</html>
