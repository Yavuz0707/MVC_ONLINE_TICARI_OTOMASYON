@model MVC_ONLINE_TICARI_OTOMASYON.Models.Siniflar.SatisHareket
@{
    ViewBag.Title = "SatisGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!--Ürün Güncelleme Sayfası View Kısmı....-->
<br />
<h2>Satış Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("SatisGuncelle", "Satıs", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Satisid) //Hata almamak için yazıldı.
    @Html.LabelFor(x => x.Urun)
    @Html.DropDownListFor(x => x.Urunid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" }) <!--Dropdown penceresi için-->
    @*@Html.TextBoxFor(x => x.Kategoriid, new { @class = "form-control" })*@
    <br />
    @Html.Label("Cari")
    @Html.DropDownListFor(x => x.Cariid, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" }) <!--Dropdown penceresi için-->
    @*@Html.TextBoxFor(x => x.Kategoriid, new { @class = "form-control" })*@
    <br />
    @Html.LabelFor(x => x.Personel)
    @Html.DropDownListFor(x => x.Personelid, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" }) <!--Dropdown penceresi için-->
    @*@Html.TextBoxFor(x => x.Kategoriid, new { @class = "form-control" })*@


    <br />
    @Html.LabelFor(x => x.Adet)
    @Html.TextBoxFor(x => x.Adet, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Fiyat)
    @Html.TextBoxFor(x => x.Fiyat, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.ToplamTutar)
    @Html.TextBoxFor(x => x.ToplamTutar, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Tarih)
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    <br />



    <button class="btn btn-warning">Güncelle</button>



}