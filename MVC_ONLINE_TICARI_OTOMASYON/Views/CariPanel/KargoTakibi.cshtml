@using MVC_ONLINE_TICARI_OTOMASYON.Models.Siniflar
@model List<KargoDetay>
@{
    ViewBag.Title = "Kargo Takibi";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-shipping-fast"></i> Kargolarım
                    </h4>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead class="table-dark">
                                    <tr>
                                        <th><i class="fas fa-barcode"></i> Takip Kodu</th>
                                        <th><i class="far fa-calendar"></i> Tarih</th>
                                        <th><i class="fas fa-user-tie"></i> Personel</th>
                                        <th><i class="fas fa-info-circle"></i> Açıklama</th>
                                        <th><i class="fas fa-cogs"></i> Detay</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var kargo in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary fs-6">@kargo.TakipKodu</span>
                                            </td>
                                            <td>
                                                @if (kargo.Tarih.HasValue)
                                                {
                                                    @kargo.Tarih.Value.ToString("dd/MM/yyyy HH:mm")
                                                }
                                            </td>
                                            <td>@kargo.Personel</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(kargo.Aciklama))
                                                {
                                                    if (kargo.Aciklama.Length > 50)
                                                    {
                                                        @(kargo.Aciklama.Substring(0, 50) + "...")
                                                    }
                                                    else
                                                    {
                                                        @kargo.Aciklama
                                                    }
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("KargoSorgula", "CariPanel", new { takipKodu = kargo.TakipKodu })" 
                                                   class="btn btn-sm btn-info">
                                                    <i class="fas fa-search"></i> Detay
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> Henüz size ait kargo kaydı bulunmamaktadır.
                        </div>
                    }

                    <hr class="my-4">

                    <div class="card mt-3">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fas fa-search"></i> Takip Kodu ile Sorgula</h5>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm("KargoSorgula", "CariPanel", FormMethod.Post, new { @class = "row g-3" }))
                            {
                                <div class="col-md-8">
                                    <input type="text" 
                                           class="form-control form-control-lg" 
                                           name="takipKodu" 
                                           placeholder="Takip kodunuzu giriniz" 
                                           required>
                                </div>
                                <div class="col-md-4">
                                    <button type="submit" class="btn btn-primary btn-lg w-100">
                                        <i class="fas fa-search"></i> Sorgula
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
