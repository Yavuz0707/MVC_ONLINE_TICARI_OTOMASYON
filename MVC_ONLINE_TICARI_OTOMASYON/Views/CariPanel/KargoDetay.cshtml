@using MVC_ONLINE_TICARI_OTOMASYON.Models.Siniflar
@model List<KargoTakip>
@{
    ViewBag.Title = "Kargo Detay";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
    var kargoDetay = ViewBag.KargoDetay as KargoDetay;
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-box-open"></i> Kargo Detay Bilgileri
                    </h4>
                </div>
                <div class="card-body">
                    @if (kargoDetay != null)
                    {
                        <div class="row mb-4">
                            <div class="col-md-12">
                                <div class="alert alert-info alert-lg">
                                    <h5 class="alert-heading">
                                        <i class="fas fa-barcode"></i> Takip Kodu
                                    </h5>
                                    <h3 class="mb-0">@kargoDetay.TakipKodu</h3>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h6 class="card-subtitle mb-2 text-muted">
                                            <i class="fas fa-user-tie"></i> Sorumlu Personel
                                        </h6>
                                        <p class="card-text h5">@(kargoDetay.Personel ?? "Belirtilmemiş")</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h6 class="card-subtitle mb-2 text-muted">
                                            <i class="far fa-calendar"></i> Oluşturulma Tarihi
                                        </h6>
                                        <p class="card-text h5">
                                            @if (kargoDetay.Tarih.HasValue)
                                            {
                                                @kargoDetay.Tarih.Value.ToString("dd MMMM yyyy HH:mm")
                                            }
                                            else
                                            {
                                                <span class="text-muted">Belirtilmemiş</span>
                                            }
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12 mb-3">
                                <div class="card">
                                    <div class="card-body">
                                        <h6 class="card-subtitle mb-2 text-muted">
                                            <i class="fas fa-info-circle"></i> Açıklama
                                        </h6>
                                        <p class="card-text">@(kargoDetay.Aciklama ?? "Açıklama bulunmuyor")</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <h5 class="fw-bold mb-4">
                            <i class="fas fa-route"></i> Kargo Hareketleri
                        </h5>

                        @if (Model != null && Model.Any())
                        {
                            <div class="timeline">
                                @foreach (var takip in Model)
                                {
                                    <div class="alert alert-secondary mb-3">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <h6 class="mb-1">
                                                    <i class="fas fa-map-marker-alt text-primary"></i>
                                                    @takip.Aciklama
                                                </h6>
                                                <small class="text-muted">
                                                    <i class="far fa-clock"></i>
                                                    @takip.TarihZaman.ToString("dd/MM/yyyy HH:mm")
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                                Bu kargo için henüz hareket kaydı bulunmamaktadır.
                            </div>
                        }

                        <div class="d-grid gap-2 mt-4">
                            <a href="@Url.Action("KargoTakibi", "CariPanel")" class="btn btn-primary btn-lg">
                                <i class="fas fa-arrow-left"></i> Kargolarıma Dön
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i> Kargo bilgisi bulunamadı!
                        </div>
                        <a href="@Url.Action("KargoTakibi", "CariPanel")" class="btn btn-primary">
                            <i class="fas fa-arrow-left"></i> Kargolarıma Dön
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
